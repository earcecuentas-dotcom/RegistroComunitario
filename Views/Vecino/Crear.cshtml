@model RegistroComunitario.Models.Vecino
@{
    ViewData["Title"] = "Registrar Vecino";
}

<h1 class="text-center text-primary mt-3">Registro Comunitario</h1>

<form asp-action="Crear" method="post" class="p-4 border rounded bg-light mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Identificacion"></label>
        <input asp-for="Identificacion" class="form-control" />
        <span asp-validation-for="Identificacion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control" />
        <span asp-validation-for="Apellidos" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Genero"></label>
        <select asp-for="Genero" class="form-select">
            <option value="">Seleccione...</option>
            <option>Masculino</option>
            <option>Femenino</option>
            <option>Otro</option>
        </select>
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" class="form-control" type="number" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Ver lista</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
